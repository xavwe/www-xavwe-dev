---
import Tag from "./tag.astro";

const { title, date, link, description } = Astro.props;
---

<style>
  a {
    display: flex;
    flex-direction: row;
    align-items: center;
  }
  .divider {
    flex: 1;
    height: 1px;
    background-color: #ccc;
    margin: 5px 10px 0px 10px;
  }
  h3 {
    padding: 0px;
    margin: 0px;
  }
  p {
    padding: 0px;
    margin: 0px;
  }
  .tag-container {
    display: flex;
    gap: 10px;
  }

  .title-row {
    display: contents;
  }

  @media (max-width: 768px) {
    a {
      flex-direction: column;
      align-items: flex-start;
    }
    .title-row {
      display: flex;
      flex-direction: row;
      align-items: center;
      width: 100%;
    }
    .tag-container {
      width: 100%;
    }
  }
</style>

<li>
  <a href={link}>
    <div class="title-row">
      <h3>{title}</h3>
      <div class="divider"></div>
    </div>
    <div class="tag-container">
      {date}
    </div>
  </a>
  <p><slot /></p>
</li>
